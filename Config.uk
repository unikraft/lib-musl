  default y

config LIBMUSL_MULTIBYTE
  bool "libmultibyte"
  default y

config LIBMUSL_NETWORK
  bool "libnetwork"
  default y

config LIBMUSL_PASSWD
  bool "libpasswd"
  default y

config LIBMUSL_PRNG
  bool "libprng"
  default y

config LIBMUSL_PROCESS
  bool "libprocess"
  default y
  select LIBMUSL_THREAD

config LIBMUSL_REGEX
  bool "libregex"
  default y

config LIBMUSL_SCHED
  bool "libsched"
  default y

config LIBMUSL_SEARCH
  bool "libsearch"
  default y

config LIBMUSL_SELECT
  bool "libselect"
  default y

config LIBMUSL_SETJMP
  bool "libsetjmp"
